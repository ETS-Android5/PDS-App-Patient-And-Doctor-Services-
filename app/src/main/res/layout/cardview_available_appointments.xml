<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="@dimen/_22sdp"
    android:padding="@dimen/_3sdp"
    app:cardCornerRadius="@dimen/_22sdp"
    android:background="@drawable/shap_cardview_available_appointment"
    app:cardUseCompatPadding="true"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shap_cardview_available_appointment"
        android:padding="@dimen/_7sdp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:padding="@dimen/_3sdp"
            android:layout_margin="@dimen/_1sdp"
            android:text="@string/ChooseAvailableAppointmentsActivity_TextView_date"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/DateAvailableAppointment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/DateAvailableAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:padding="@dimen/_3sdp"
            android:text="TextView"
            android:layout_margin="@dimen/_1sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:padding="@dimen/_3sdp"
            android:layout_margin="@dimen/_1sdp"
            android:text="@string/ChooseAvailableAppointmentsActivity_TextView_time"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            app:layout_constraintBottom_toTopOf="@+id/TimeAvailableAppointment"
            app:layout_constraintEnd_toEndOf="@+id/DateAvailableAppointment"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/DateAvailableAppointment"
            app:layout_constraintTop_toBottomOf="@+id/DateAvailableAppointment" />

        <TextView
            android:id="@+id/TimeAvailableAppointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/andika"
            android:padding="@dimen/_3sdp"
            android:layout_margin="@dimen/_1sdp"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/textView8"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/textView8"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>