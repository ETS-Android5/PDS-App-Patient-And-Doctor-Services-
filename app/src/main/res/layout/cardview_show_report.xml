<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="@dimen/_18sdp"
    android:padding="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_18sdp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@drawable/shap_activity_login_cardview"
        android:layout_height="match_parent"
        android:paddingStart="@dimen/_7sdp"
        android:paddingEnd="@dimen/_7sdp"
        android:paddingTop="@dimen/_5sdp"
        >

        <View
            android:id="@+id/view4"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:background="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_MedicalReport_ReportTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/ShowMedicalReport_TextView_ReportTitle"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/MedicalReport_ReportTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textColor="@color/white"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/view4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView_MedicalReport_ReportTitle"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_MedicalReport_ReportDetails"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="@string/ShowMedicalReport_TextView__ReportDetails"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/MedicalReport_ReportDetails"
            app:layout_constraintEnd_toStartOf="@+id/MedicalReport_ReportDetails"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/MedicalReport_ReportDetails" />

        <TextView
            android:id="@+id/MedicalReport_ReportDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_MedicalReport_ReportDetails"
            app:layout_constraintTop_toBottomOf="@+id/view4" />

        <TextView
            android:id="@+id/textView_MedicalReport_DoctorsInstructions"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:text="@string/ShowMedicalReport_TextView_DoctorsInstructions"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/MedicalReportDoctorsInstructions"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/MedicalReportDoctorsInstructions"
            app:layout_constraintTop_toTopOf="@+id/MedicalReportDoctorsInstructions" />

        <TextView
            android:id="@+id/MedicalReportDoctorsInstructions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="TextView"
            android:layout_marginTop="@dimen/_7sdp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_MedicalReport_DoctorsInstructions"
            app:layout_constraintTop_toBottomOf="@+id/MedicalReport_ReportDetails" />

        <TextView
            android:id="@+id/textView_MedicalReport_SuggestedMedication"
            android:layout_width="@dimen/_110sdp"
            android:layout_height="wrap_content"
            android:text="@string/ShowMedicalReport_TextView_SuggestedMedication"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16ssp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_7sdp"
            app:layout_constraintEnd_toStartOf="@+id/MedicalReport_SuggestedMedication"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/MedicalReport_SuggestedMedication"
            app:layout_constraintTop_toTopOf="@+id/MedicalReport_SuggestedMedication" />

        <TextView
            android:id="@+id/MedicalReport_SuggestedMedication"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:scrollbars="vertical"
            android:text="TextView"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16ssp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/textView_MedicalReport_SuggestedMedication"
            app:layout_constraintTop_toBottomOf="@+id/MedicalReportDoctorsInstructions" />

        <Button
            android:id="@+id/cardViewAppointment_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:backgroundTint="@color/colorPrimary"
            android:text="@string/ShowAppointmentUser_btn_doctorViewInfo"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            app:cornerRadius="@dimen/_7sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/MedicalReport_SuggestedMedication" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>